<div id="tabs-6content">
<%- flash[:notice] %>
<% form_for @user_session, :url => user_sessions_path do |f| %>
  
  <%= f.label :Usuario %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :Contraseña %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :Recuerdame %><br />
  <br />
  <%= f.submit "Entrar" %> <a href="#" onclick="$('#tabs-6content').load('<%= new_password_reset_path -%>')">He olvidado mi contraseña</a> 
<% end %>
</div>
