<div id="tabs-6content">
 
  <% if @user_session.errors.any? %>
	<div class="error-login">
      <% @user_session.errors.full_messages.each do |msg| %>
        <%= msg %><br/>
      <% end %>
	</div>
  <% end %>


<% form_for @user_session, :url => user_sessions_path do |f| %>

  <p><%= f.label :Usuario %> <%= f.text_field :login %></p>
  <p><%= f.label :Contraseña %> <%= f.password_field :password %></p>
  <p><%= f.label :Recuerdame %><%= f.check_box :remember_me %></p> 
  <%= f.submit "Entrar" %> <%= link_to("He olvidado mi contraseña", new_password_reset_path) -%>
  <br /><br />
  <%= link_to "Cómo registrarse", 'registrarse' , :class => 'registrarse' %>
<% end %>
</div>
