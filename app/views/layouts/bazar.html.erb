<!DOCTYPE html>
<html>
  <head>
	<meta name="description" content="proyecto bazar, garum fundatio, agilizando mercados <%= h BZ_param("Titular") %>, <%= h BZ_param("Subtitular") %>" /> 
	<meta name="keywords" content="proyecto bazar, garum, garum fundatio, marketplace, agilizando mercados, <%= h BZ_param("Titular") %>, <%= h BZ_param("Subtitular") %>" /> 
	
	<link rel="icon" href="/images/favicon.ico" type="image/x-icon" />
	<link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
	
	<title><%= h BZ_param("Titular") %></title>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "jquery-ui.js" %>
	<%= javascript_include_tag "jquery.cycle.all.min.js" %>

	<%= stylesheet_link_tag("bazar") %>

	
	<%= csrf_meta_tag %>
  </head>
	
		<% if !current_user.nil? %>
			<body class="logueado"><!-- si usuario logueado -->
			<% if !current_user_is_admin %>
				<body class="admin"><!-- si usuario administrador -->
			<% end %>
		<% else %>
			<body class="anonimo"><!-- si es anónimo -->
		<% end %>
	
   <div class="container">

	  <div id="header">
		      <h1 id="title"><%= h BZ_param("Titular") %></h1>
	          <h2 id="slogan"><%= h BZ_param("Subtitular") %></h2>
	  </div>
	  
      <% if current_user.nil? %>
         <div id="nav-usuario">
           <a class="registro-link" href="#">Registrarse</a> o
           <a class="login-link" href="#">Cerrar</a>
         </div>
      <% end %>

      <% if !current_user.nil? %>
			<ul id="nav-usuario">
				<li class="user-links">
				<%= link_to current_user.login,  edit_user_path(current_user.id), :class => 'user-link' %>
				<%= link_to(image_tag('icono-logout.png'),  "/logout", :class => 'logout-link', :title => 'Cerrar Sesión') %>
				</li>
				<li class="user-messages">
				<%= link_to(image_tag('notificacion.png'),  "/mensajes?tipo=N", :class => 'notif-link', :title => 'Notificaciones') %>
				(<%= Mensaje.notificacionessinleer(current_user.id).count -%>/<%=  Mensaje.notificacionestotal(current_user.id).count -%>)

				<%= link_to(image_tag('email.png'),  "/mensajes?tipo=M", :class => 'msgs-link', :title => 'Mensajes') %>
				(<%= Mensaje.mensajessinleer(current_user.id).count -%>/<%=  Mensaje.mensajestotal(current_user.id).count -%>)

				</li>
				<li class="nav-site">
    			<a href="#" class="home-link" title="Ir a la Página principal"><img alt="Página principal" src="/images/icono-home.png"></a>
                <a href="#" class="account-link" title="Mi cuenta"><img alt="Cuenta de usuario" src="/images/icono-usuario.png"></a>
                <a href="#" class="empresa-link" title="Mi empresa"><img src="images/group.png" /></a>
                <a href="#"><img title="Historial de consultas" src="/images/icono-historial.png" /></a>
                <a href="#"><img title="Crear Oferta/Demanda" src="images/add.png" /></a>
                </li>
            </ul>
    <% end %>
	  
	  
 
	  <div id="content" class="span-24 last">	
			<div class="body">

			<div id="contenido" >
				<%= content_for?(:bazarcontent) ? yield(:bazarcontent) : yield %>
			</div>
			<div id="sidebar" style="display:none" >
	        <ul id="sidebar-items">
			
				<% if current_user.nil? %>
				<h3>RSS</h3>
				<ul class="links">
					<li><%= image_tag('feed.png')-%> <%= link_to("Noticias", "/noticias.rss") -%></li>
				</ul>
			
				<% end %>

			  <li>
							<% if !current_user.nil? %>
							<ul id="user-menu" class="links">
								<li class="user-links">
								<%= link_to current_user.login,  edit_user_path(current_user.id), :class => 'user-link' %>
								<%= link_to(image_tag('icono-logout.png'),  "/logout", :class => 'logout-link', :title => 'Cerrar Sesión') %>
								</li>
								<li class="user-messages">
								<%= link_to(image_tag('notificacion.png'),  "/mensajes?tipo=N", :class => 'notif-link', :title => 'Notificaciones') %>
								(<%= Mensaje.notificacionessinleer(current_user.id).count -%>/<%=  Mensaje.notificacionestotal(current_user.id).count -%>) 
								
								<%= link_to(image_tag('email.png'),  "/mensajes?tipo=M", :class => 'msgs-link', :title => 'Mensajes') %>
								(<%= Mensaje.mensajessinleer(current_user.id).count -%>/<%=  Mensaje.mensajestotal(current_user.id).count -%>) 

								</li>
                            </ul>
							<% end %>
		          </li>	
	          <li>
				<% if !current_user.nil? %>

				<% if !current_user_is_invitado %>

	            <h3>Modulos de Bazar</h3>
	            <ul class="links">
					<li><%= link_to "Página Principal", "/home" %></li>
				    <li><%= link_to "Mi cuenta",  edit_user_path(current_user.id) %> </li>
				    <li><%= link_to "Mi empresa", edit_bazarcms_empresa_path(current_user.id) %> </li>
					<li><%= link_to "Buscador Empresas", '/bazarcms/buscadorempresas' %> </li>
					<li><%= link_to "Consultas Realizadas", bazarcms_empresasconsultas_path %> </li>
	            </ul>
				<% end %>

				<% end %>
	          </li>

	          <li>
				<% if current_user_is_admin %>

	            <h3>Administración</h3>
	
	            <ul class="links">
				  <li><%= link_to "Usuarios", users_path %> </li>
				  <li><%= link_to "Configuración del Sistema", confs_path %> </li>
				  <li><%= link_to "Gestión Bazares", clusters_path %> </li>
				  <li><%= link_to "Notificacion a Usuarios", '/notificacion?tipo=N' %> </li>
				  <li><%= link_to "Actualización Información", '/updateinfo' %> </li>
	            </ul>

				<% end %>
	          </li>


	         <li>
				<% if current_user_is_dinamizador %>

	            <h3>Dinamización</h3>
	            <ul class="links">
				    <li><%= link_to "Mailing a Usuarios", '/notificacion?tipo=M' %> </li>
				    <li><%= link_to "Noticias", noticias_path %> </li>
	            </ul>

				<% end %>
	          </li>

	          <li>
				<% if current_user_is_invitado %>

	            <h3>Bienvenido a Bazar</h3>
	            <ul class="links">
	                <li><a href="http://api.rubyonrails.org/">Que es Bazar</a></li>
				    <li><%= link_to "Registrate",  new_user_path %> </li>
	            </ul>

				<% end %>
	         </li>


			<li>
				<h3>API</h3>
				<ul class="links">
					<li><%= link_to("Como obtener información", "/api/index") -%></li>
					<li><%= link_to("Ejemplos API Bazar", "/api/ejemplos") -%></li>
				</ul>
			</li>


	        </ul>
	     </div>	
			</div>
			
			
			
			
	  </div>

		<div id="footer">
	    		<a href="http://garumfundatio.org" style="text-decoration: none">Garum Fundatio</a>
		</div> <!-- fin footer-->

	

  </div> <!-- fin container -->

  </body>
</html>



