line1 = [];
ii = 0;
<% for data in Bazarcms::Perfil.where("total_empresas_bazar > 0 and nivel = 2").order("total_empresas_bazar desc").limit(15) %>

	line1[ii] = [ '<%= data.desc -%>', <%= data.total_empresas_bazar -%>];
	ii++;
<% end %>

plot2 = $.jqplot('perfilesbazar', [line1], {
    title: 'Sectores más significativos de este bazar',
    seriesDefaults:{renderer:$.jqplot.PieRenderer, rendererOptions:{sliceMargin:4}},
    legend:{show:true}
});

