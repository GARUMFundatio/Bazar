<%= form_for(@mensaje) do |f| %>

<div class="field">
    <%= f.hidden_field :de %>
    <%= f.hidden_field :para %>
    <%= f.hidden_field :tipo %>
    <%= f.hidden_field :fecha %>
    <%= f.hidden_field :leido %>
    <%= f.hidden_field :borrado %>
    <%= f.hidden_field :bazar_origen %>
    <%= f.hidden_field :bazar_destino %>

</div>

<% if (@mensaje.para >= 0 ) %>
 <div class="field">
	De:  <%= User.find(@mensaje.de).login -%> a 
    <% if @nombre.length > 0 %>
		<%= @nombre -%>
	<% else %>
		<%= User.find(@mensaje.para).login -%>
	<% end %>
 </div> 
<% end %>

<% if (@mensaje.para < 0 ) %>
 <div class="field">
	De:  <%= User.find(@mensaje.de).login -%> a todos los usuarios
 </div> 
<% end %>

<% if (@mensaje.para == 0 ) %>
	definir busqueda de usuarios (login) + empresa (nombre) con autocomplete
<% end %>

  <div class="field">
    <%= f.label :Asunto %>:  <%= f.text_field :asunto %>
  </div>

  <div class="field">
    <%= f.label :Texto %><br />
    <%= f.text_area :texto, :size => "60x10" %>
  </div>

  <div class="actions">
	<%= f.submit "Enviar" %>
  </div>

<% end %>