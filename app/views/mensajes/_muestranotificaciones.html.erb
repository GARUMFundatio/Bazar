<a class="volver-home-link" href="/home">Volver a la página de búsquedas</a>

<div>

<% if @mensajes.count > 0 %>	
<table class="tabla" cellspacing="0">
  <tr>
    <th>De</th>
    <th>Asunto</th>
    <th>Fecha</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mensajes.each do |mensaje| %>


<% if (!mensaje.leido.nil?) %>
  <tr id="head<%= mensaje.id -%>" style="text-align:left;">
<% else %>
  <tr id="head<%= mensaje.id -%>" style="font-weight:bold; text-align:left;">
<% end %>
    
	<td style="text-align:left;">
		<%= mensaje.de_nombre %>
	</td>
  
	<td style="text-align:left;">
		<%= mensaje.asunto %>
	</td>

    <td style="text-align:left;">
		<%= mensaje.fecha.strftime("%d-%m-%Y %H:%M") %>
	</td>

    <td><a href="#" onclick="$('#men<%= mensaje.id -%>').toggle();$('#head<%= mensaje.id -%>').css('font-weight','normal'); $.ajax({url:'/mensajes/leido/<%= mensaje.id -%>'});"> <%= image_tag("lupa.png") -%></a></td>
    <td><%= link_to(image_tag("enviarcorreo.png"), edit_mensaje_path(mensaje)) %></td>
    <td><%= link_to(image_tag("papelera.png"), mensaje, :confirm => 'Seguro?', :method => :delete) %></td>
  </tr>

  <tr id="men<%= mensaje.id -%>" style="display: none">
    <td width="300" style="text-align:left; background-color: #fff;" colspan="3"><%= mensaje.texto %></td>
  </tr>

<% end %>
</table>

<%= will_paginate @mensajes %>

<% else %>
	<% if params[:tipo] == 'N' %>
		<p>No hay notificaciones.</p>
	<% else %>
  <p>No hay mensajes.</p>
	<% end %>
<% end %>

</div>
