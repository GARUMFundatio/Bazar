<div class="ficha-container">


<div id="caja-login">
 
  <% if @user_session.errors.any? %>
	<div class="login-error">
      <% @user_session.errors.full_messages.each do |msg| %>
        <%= msg %><br/>
      <% end %>
	</div>
  <% end %>


