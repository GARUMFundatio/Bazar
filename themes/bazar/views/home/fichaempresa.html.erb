<%= stylesheet_link_tag(current_theme_stylesheet_path('bazar')) %>
<%= javascript_include_tag(current_theme_javascript_path('jquery.scrollTo-1.4.2-min')) %>

<!-- sección cabecera empresa -->

<div class="caja-seccion" id="empresas-recomendadas">
  <div class="ficha-indice">
    <div class="fichaempresa-iconos ilumina5">
      <img class="fichaempresa-icono" src="<%= current_theme_image_path('sobre.png') %>">
    </div>
    <div class="fichaempresa-iconos ilumina5">
      <img class="fichaempresa-icono" src="<%= current_theme_image_path('favorito.png') %>">
    </div>
  </div>
  
  <div class="seccion-contenido">

    <div class="fichaempresa-titular">
      
      <div class="fichaempresa-titulo">
        <%= @empresa.nombre -%>
      </div>
      
      <div class="fichaempresa-cajaicono ilumina5">
        IND
      </div>
      
      <% if BZ_param("BazarId").to_i == params[:bazar].to_i && current_user.id == params[:id].to_i %>
      
        <div class="fichaempresa-iconos ilumina5">
          <img class="fichaempresa-icono-editar" src="<%= current_theme_image_path('editar.png') %>" onClick="window.alert('click in editar');" >
        </div>
        
      <% else %>
      
        <div class="fichaempresa-cajaicono ilumina5">
          5M€
        </div>

        <div class="fichaempresa-cajaicono ilumina5">
          *****
        </div>
      
      <% end %>
      
      <div class="fichaempresa-enlace">
        <%= @empresa.url -%>
      </div>

    </div>

    
    
    <div class="fichaempresa-desc">
      <%= @empresa.desc -%>
    </div>
      
    <div class="seccion-menu">
      
      <div class="seccion-menu-item ilumina5" onclick="$.scrollTo('#ofertas', 'slow')">
        Ofertas
      </div>
      
      <div class="seccion-menu-item ilumina5" onclick="$.scrollTo('#demandas', 'slow')">
        Demandas
      </div>
      
      <div class="seccion-menu-item ilumina5" onclick="$.scrollTo('#sobre', 'slow')">
        Sobre la empresa
      </div>
      
      <div class="seccion-menu-item ilumina5" onclick="$.scrollTo('#sedes', 'slow')">
        Sedes
      </div>
      
    </div>

  </div>

</div>


