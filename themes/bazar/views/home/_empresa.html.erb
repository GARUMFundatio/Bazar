<div class="seccion-empresa ilumina5" onClick="window.location = '/home/fichaempresa/<%= BZ_param("BazarId")-%>/<%= empresa.id -%>'; ">
  <div class="empresa-fondo">
    <% img = logo_grande_helper(BZ_param('BazarId'), empresa.id) %>

    <% if !img.nil? %>
      <% if !img.include?("sinlogo.png") %>
        <div id="logo-<%= BZ_param("BazarId")%>-<%= empresa.id -%>" class="empresa-fondo-logo-grande">
          <%= link_to(image_tag(img), "/home/fichaempresa/#{BZ_param('BazarId')}/#{empresa.id}") %> 
        </div>
      <% else %>
          <%= empresa.nombre -%>  
      <% end %>
    <% else %>
        <%= empresa.nombre -%>
    <% end %>
    
    <div class="empresa-descripcion">
      <%= truncate_html(empresa.desc, :length => 60).html_safe -%>
    </div>

  </div>
</div>

