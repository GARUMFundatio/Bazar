<!-- Sección menús -->
<div class="caja-seccion">
  <div class="caja-indice">
  &nbsp;
  </div>
  
  <div class="seccion-contenido">
    
    <div class="seccion-header">
      Resumen
    </div>

    <div class="seccion-subheader">
      Lo más nuevo y relevante
    </div>

    <div class="seccion-menu">
      
      <div class="seccion-menu-item ilumina5" >
        <a href="#ofertas-recomendadas">Ofertas recomendadas</a>
      </div>
      
      <div class="seccion-menu-item ilumina5">
        <a href="#demandas-recomendadas">Demandas recomendadas</a>
      </div>
      
      <div class="seccion-menu-item ilumina5">
        <a href="#empresas-interesantes">Empresas interesantes</a>
      </div>
      
      <div class="seccion-menu-item ilumina5">
        <a href="#empresas-nuevas">Empresas nuevas en Bazar</a>
      </div>
      
      <div class="seccion-menu-item ilumina5">
        <a href="#tu-empresa">Tu empresa en Bazar</a>
      </div>

      <div class="seccion-menu-item ilumina5">
        <a href="#datos-bazar">Datos de este Bazar</a>
      </div>
      
    </div>

  </div>

</div>

<!-- sección ofertas recomendadas -->

<div class="caja-seccion" id="ofertas-recomendas">
  <div class="caja-indice">
  Ofertas <br/>recomendadas
  </div>
  
  <div class="seccion-contenido">
    
    <% for oferta in @ofertas %>
    
    <div class="seccion-cajon ilumina5">
      <div class="cajon-titulo">
        <%= oferta.titulo -%>
      </div>
      <div class="cajon-cuerpo">
        <%= oferta.texto.html_safe -%>
      </div>
      <div class="cajon-pie">
        Valida de <%= oferta.fecha.strftime("%d-%m-%y") %> a <%= oferta.fecha_hasta.strftime("%d-%m-%y") %>
      </div>
    </div>
    
    <% end %>

  </div>

</div>

<!-- sección demandas recomendadas -->

<div class="caja-seccion" id="demandas-recomendas">
  <div class="caja-indice">
  Demandas <br/>recomendadas
  </div>
  
  <div class="seccion-contenido">
    
    <% for demanda in @demandas %>
    
    <div class="seccion-cajon ilumina5">
      <div class="cajon-titulo">
        <%= demanda.titulo -%>
      </div>
      <div class="cajon-cuerpo">
        <%= demanda.texto.html_safe -%>
      </div>
      <div class="cajon-pie">
        Valida de <%= demanda.fecha.strftime("%d-%m-%y") %> a <%= demanda.fecha_hasta.strftime("%d-%m-%y") %>
      </div>
    </div>
    
    <% end %>

  </div>

</div>


<!-- sección Empresas recomendadas -->

<div class="caja-seccion" id="empresas-recomendas">
  <div class="caja-indice">
  Empresas que <br/>pueden interesarte
  </div>
  
  <div class="seccion-contenido">
    Empresas interesantes!!

  </div>

</div>

<!-- sección Empresas nuevas -->

<div class="caja-seccion" id="empresas-nuevas">
  <div class="caja-indice">
  Empresas nuevas <br/>en tu bazar
  </div>
  
  <div class="seccion-contenido">
    Empresas nuevas!!

  </div>

</div>

<!-- sección tu empresa -->

<div class="caja-seccion" id="tu-empresa">
  <div class="caja-indice">
  Tu empresa en el <br/> bazar
  </div>
  
  <div class="seccion-contenido">
    <div class="seccion-cajon ilumina5">
    datos de tu empresa!!
    </div>
  </div>

</div>

<!-- datos del bazar  -->

<div class="caja-seccion" id="datos-bazar">
  <div class="caja-indice">
  Los datos de <br/> <%= h BZ_param("Titular") %>
  </div>
  
  <div class="seccion-contenido" id="contenido-datos-bazar">
    <div class="seccion-cajon ilumina5">
      <div class="seccion-cifra">
        <%= @totalempresas %> 
      </div>
      <div class="seccion-cifra-titulo">
        empresas 
      </div>
    </div>

    <div class="seccion-cajon ilumina5">
      <div class="seccion-cifra">
        <%= @totalofertas %> 
      </div>
      <div class="seccion-cifra-titulo">
        ofertas
      </div> 
    </div>

    <div class="seccion-cajon ilumina5">
      <div class="seccion-cifra">
        <%= @totaldemandas %> 
      </div>
      <div class="seccion-cifra-titulo">
        demandas
      </div>
    </div>
    
  </div>

</div>


